{
    "name": "vscode-disocrd-rich-presence",
    "displayName": "Discord Rich Presence for VSCode by Piotro",
    "description": "Displays what you are editing in VSCode with advanced Discord Rich Presence",
    "version": "2.2.0-SNAPSHOT",
    "publisher": "piotro888",
    "author": {
        "name": "Piotr WÄ™grzyn - Piotro"
    },
    "engines": {
        "vscode": "^1.36.0"
    },
    "activationEvents": [
        "*"
    ],
    "main": "/src/main.js",
    "dependencies": {
        "discord-rpc": "^3.1.0"
    },
    "categories": ["Other"],
    "contributes": {
        "commands":[
            {
                "command": "discord.enableworkspace",
                "title": "Enable VSCode Rich Presence plugin in workspace (save to settings)",
                "category": "Piotro Rich Presence"
            },
            {
                "command": "discord.disableworkspace",
                "title": "Disable Rich Presence plugin in workspace (save to settings)",
                "category": "Piotro Rich Presence"
            },
            {
                "command": "discord.connect",
                "title": "Connect to Discord and enable Rich Presence",
                "category": "Piotro Rich Presence"
            },
            {
                "command": "discord.disconnect",
                "title": "Disconnect from Discord",
                "category": "Piotro Rich Presence"
            },
            {
                "command": "discord.reset",
                "title": "Reset connection to Discord",
                "category": "Piotro Rich Presence"
            }
        ],
        "configuration":[
            {
                "title": "Discord Rich Presence for VSCode by Piotro",
                "properties": {
                    "discord.enabled": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enables Rich Presence"
                    },
                    "discord.idleSmallText": {
                        "type": "string",
                        "default": "Configure me in VSCode settings",
                        "description": "Idle state small message"
                    },
                    "discord.idleImageText": {
                        "type": "string",
                        "default": "Configure me in VSCode settings",
                        "description": "Idle state small image description"
                    },
                    "discord.debugImageText": {
                        "type": "string",
                        "default": "debug",
                        "description": "Debug icon description"
                    }
                }
            }
        ]
    },
    "optionalDependencies": {
        "register-scheme": "github:devsnek/node-register-scheme"
    },
    "keywords": [
        "discord",
        "rpc",
        "rich presence",
        "status"
    ],
    "repository": {
        "url": "https://github.com/piotro888/vscode-disocrd-rich-presence.git",
        "type": "git"
    },
    "license": "GPL v3",
    "bugs": {
        "url": "https://github.com/piotro888/vscode-disocrd-rich-presence/issues"
    },
    "icon": "images/logo.png"
}